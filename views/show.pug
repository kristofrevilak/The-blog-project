extends layout

block content
  .main_header
    h2.main_nadpis
      |#{blog.title}
    p.date
      |#{blog.date.toDateString()}
    p.date
      a(href="/blogs/" + blog._id + "/edit").read.right.yellow
        |edit
    p.date
      form(action="/blogs/" + blog.id + "?_method=DELETE", method="POST")
        button.read.right.red
          |delete
  .main_body
    p
      |#{blog.body}
